---
layout: base.njk
pagination:
  data: projects
  size: 1
  alias: project
permalink: "/{{ project.slug }}/"
---
<div class="content">
    
    {% if pagination.href.previous %}
        <a style="text-decoration: none;" href="{{ pagination.href.previous }}">⇠</a>
    {% else %}
        <a style="text-decoration: none;" href="{{ pagination.href.last }}">⇠</a>
    {% endif %}

    {% if pagination.href.next %}
        <a style="text-decoration: none;" href="{{ pagination.href.next }}">⇢</a>
    {% else %}
        <a style="text-decoration: none;" href="{{ pagination.href.first }}">⇢</a>
    {% endif %}
    
    <div class="content-child">
        <div class="flex-container">

            <div>
                <h1>{{project.title}}</h1>
                {{project.description | safe}}
            </div>

            <div id="displayContainer">
                <div class="display-item">
                    <div class="img-flex-container">
                        {% for image in project.images %}
                            <div> 
                                <img class="sketch-short hidden2 show1" src="{{image}}">
                            </div>
                        {% endfor %}
                    </div> {# img-flex-container #}
                </div> {# display-item #}
            </div> {# displayContainer #}

        </div> {# flex-container #}
    </div> {# content-child #}
</div> {# content #}